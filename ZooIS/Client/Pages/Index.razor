@page "/"




<MudButton OnClick="Kriu" ButtonType="ButtonType.Button">Kriu</MudButton>
<br />
<br />
@if(loading)
{
    <MudProgressCircular Color="Color.Success" Indeterminate="true" />
}

@code {
    bool loading;

    async void Kriu()
    {
        loading = !loading;
        StateHasChanged();
        await Task.Delay(2000);
        loading = !loading;
        StateHasChanged();    
    }

}