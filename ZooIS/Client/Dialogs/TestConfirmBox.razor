@code {

    public bool ShowBox { get; set; }
    [Parameter]
    public string? Title { get; set; } = "Forgot to add title :p";
    [Parameter]
    public string? Message { get; set; } = "Really?";
    [Parameter]
    public EventCallback<bool> UserChoice { get; set; }

    public void Show(string msg)
    {
        Message = msg;
        ShowBox = true;
        StateHasChanged();
    }

    protected async Task OnChoiceChange(bool value)
    {
        ShowBox = false;
        await UserChoice.InvokeAsync(value);
    }
}