@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<div class="page">
    <div class="sidebar" style="width:200px; min-width:200px;">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <EnterSettings />
            <LoginLogout />
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    void GoToSettings()
    {
        NavigationManager.NavigateTo("/settings");
    }
}