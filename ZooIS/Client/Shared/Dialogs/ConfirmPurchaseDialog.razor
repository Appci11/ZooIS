<MudDialog>
    <DialogContent>
        <MudTextField T="string" Variant="Variant.Text" Text="@BodyText" Lines="@LineAmmount"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Primary">Atšaukti </MudButton>
        <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Primary">Pasirinkti</MudButton>
    </DialogActions>
</MudDialog>

@code{
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string BodyText { get; set; }
    [Parameter] public int LineAmmount { get; set; }
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}